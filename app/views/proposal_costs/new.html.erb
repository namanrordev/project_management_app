<h3>Add Cost Item</h3>

<%= form_with model: [@proposal, @proposal_cost], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :category %>
    <%= f.text_field :category, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :amount %>
    <%= f.number_field :amount, step: 0.01, class: "form-control" %>
  </div>

  <%= f.submit "Add Cost", class: "btn btn-primary" %>
<% end %>
