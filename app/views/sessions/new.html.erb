<div class="container mt-5">
  <h2>Login</h2>
  <%= form_with url: sessions_path, local: true do |f| %>
    <div class="mb-3">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
    <%= submit_tag "Login", class: "btn btn-primary" %>
  <% end %>
</div>
